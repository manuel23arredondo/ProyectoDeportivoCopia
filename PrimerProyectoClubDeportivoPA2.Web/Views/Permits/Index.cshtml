@model IEnumerable<PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Permit>

@{
    ViewData["Title"] = "Permisos";
}

<h1>Permiso</h1>

<p>
    @if (this.User.IsInRole("Admin"))
     {
    <a asp-action="Create" class="btn btn-success">Crear Permiso</a>
     }
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sport.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport.Name)
            </td>
            <td>
                @if (this.User.IsInRole("Admin"))
                 {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                 }

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
@model PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Member

@{
    ViewData["Title"] = "Eliminar Miembro";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar esto?</h3>
<div>
    <h4>Member</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.EnrollmentNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EnrollmentNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MembershipType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MembershipType.Name)
        </dd>
    </dl>
    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" style="width:400px;height:300px" />
        }
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
    </form>
</div>

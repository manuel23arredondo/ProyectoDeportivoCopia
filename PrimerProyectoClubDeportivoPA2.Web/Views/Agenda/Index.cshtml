@model IEnumerable<PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Agenda>

@{
    ViewData["Title"] = "Agenda";
}

<h1>Agenda</h1>

<p>
    @if (this.User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">Crear Agenda</a>
    }
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Schedule.StartingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Schedule.FinishingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Schedule.WeekDay.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Schedule.Facility.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Sport.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingSession.Coach.User.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Schedule.StartingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Schedule.FinishingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Schedule.WeekDay.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Schedule.Facility.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Sport.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingSession.Coach.User.FullName)
            </td>
            <td>
                @if (this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                }
            </td>
            <td>
                @if (this.User.IsInRole("Coach"))
                {
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@model PrimerProyectoClubDeportivoPA2.Web.Models.AgendaViewModel

@{
    ViewData["Title"] = "Editar Agenda";
}

<h1>Editar</h1>

<h4>Agenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" asp-items="Model.TrainingSessions" class="form-control"></select>
                <span asp-validation-for="TrainingSession" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" asp-items="Model.Members" class="form-control"></select>
                <span asp-validation-for="Member" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>
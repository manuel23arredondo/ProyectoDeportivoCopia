@model IEnumerable<PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Schedule>

@{
    ViewData["Title"] = "Horario";
}

<h1>Horario</h1>

<p>
    @if (this.User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">Crear horario</a>
    }
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinishingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekDay.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facility.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekDay.Name)
            </td>
            <td>
                @if (this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                }
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>

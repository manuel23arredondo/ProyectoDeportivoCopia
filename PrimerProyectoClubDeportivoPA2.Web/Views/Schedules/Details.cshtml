@model PrimerProyectoClubDeportivoPA2.Web.Data.Entities.Schedule

@{
    ViewData["Title"] = "Detalles Horario";
}

<h1>Detalles</h1>

<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartingHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartingHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FinishingHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinishingHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facility.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WeekDay.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeekDay.Name)
        </dd>
    </dl>
</div>
<div>
    @if (this.User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>

    }
    
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>
